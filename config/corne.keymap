        combo_esc {
            timeout-ms = <40>;
            key-positions = <1 2>;
            bindings = <&kp ESC>;
        };
        combo_tab {
            timeout-ms = <40>;
            key-positions = <2 3>;
            bindings = <&kp TAB>;
        };
        combo_dictation {
            timeout-ms = <40>;
