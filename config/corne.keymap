        combo_ret {
            timeout-ms = <40>;
            key-positions = <6 7>;
            bindings = <&kp RET>;
        };
        combo_bspc {
            timeout-ms = <40>;
            key-positions = <7 8>;
            bindings = <&kp BSPC>;
        };
        combo_del {
            timeout-ms = <55>;
            key-positions = <8 9>;
