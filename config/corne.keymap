#define ___ &trans

/ {
    combos {
        compatible = "zmk,combos";
        combo_repeat {
            timeout-ms = <40>;
            key-positions = <22 23>;
            bindings = <&key_repeat>;
        };
        combo_cw {
            timeout-ms = <40>;
            key-positions = <26 27>;
            bindings = <&caps_word>;
        };
        combo_pg_dn {
            timeout-ms = <40>;
            key-positions = <26 27>;
            layers = <1>;
            bindings = <&kp PG_DN>;
        };
        combo_pg_up {
            timeout-ms = <40>;
            key-positions = <27 28>;
            layers = <1>;
            bindings = <&kp PG_UP>;
        };
        combo_home {
            timeout-ms = <40>;
            key-positions = <21 22>;
            layers = <1>;
            bindings = <&kp HOME>;
        };
        combo_end {
            timeout-ms = <40>;
            key-positions = <22 23>;
            layers = <1>;
            bindings = <&kp END>;
        };
    };
};

