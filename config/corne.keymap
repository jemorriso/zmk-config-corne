/ {
    combos {
        compatible = "zmk,combos";
        combo_function {
            timeout-ms = <50>;
            key-positions = <33 34>;
            bindings = <&mo 4>;
        };
        combo_caps {
            timeout-ms = <40>;
            key-positions = <16 33>;
            bindings = <&kp CAPS>;
        };
        combo_dictation {
            timeout-ms = <55>;
            key-positions = <11 12 13>;
            bindings = <&kp LA(F5)>;
        };
        combo_esc {
            timeout-ms = <40>;
            key-positions = <1 2>;
            bindings = <&kp ESC>;
        };
        combo_tab {
            timeout-ms = <40>;
            key-positions = <2 13>;
            bindings = <&kp TAB>;
        };
        combo_shift_tab {
            timeout-ms = <55>;
            key-positions = <1 2 13>;
            bindings = <&kp LS(TAB)>;
        };
        combo_ret {
            timeout-ms = <40>;
            key-positions = <7 8>;
            bindings = <&kp RET>;
        };
        combo_bspc {
            timeout-ms = <40>;
            key-positions = <16 7>;
            bindings = <&kp BSPC>;
        };
        combo_del {
            timeout-ms = <55>;
            key-positions = <6 7>;
            bindings = <&kp DEL>;
        };
        combo_shift_ret {
            timeout-ms = <55>;
            key-positions = <6 7 8>;
            bindings = <&kp LS(RET)>;
        };
        combo_alt_bspc {
            timeout-ms = <55>;
            key-positions = <16 7 8>;
            bindings = <&kp LA(BSPC)>;
        };
    };
};

// make sticky keys release on the next key press instead of the default key
// release, this was causing problems with rolling letters
&sk {
    quick-release;
};

/ {
    chosen {
        zmk,physical-layout = &foostan_corne_5col_layout;
    };

    behaviors {
        // urob idea: use mod-morph instead of tap-dance to avoid the delay.
        // The first press activates shift, the second press sees that shift is
        // active and triggers caps_word.
        shift_morph: shift_morph {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&sk LSHFT>, <&caps_word>;
            mods = <(MOD_LSFT)>;
        };

        msft: magic_shift {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <200>;
            quick-tap-ms = <175>;
            bindings = <&kp>, <&shift_morph>;
        };

        // lt: layer_tap is default behavior, we make a blt to avoid overriding it ðŸ¥ª
        blt: balanced_layer_tap {
            compatible = "zmk,behavior-hold-tap";
            flavor = "balanced";
            bindings = <&mo>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <200>;
        };

        lmt: left_mod_tap {
            compatible = "zmk,behavior-hold-tap";
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <200>;
            require-prior-idle-ms = <125>;
            hold-trigger-key-positions = <5 6 7 8 9 15 16 17 18 19 25 26 27 28 29 33 34 35>;
            hold-trigger-on-release;
        };

        rmt: right_mod_tap {
            compatible = "zmk,behavior-hold-tap";
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <200>;
            require-prior-idle-ms = <125>;
            hold-trigger-key-positions = <0 1 2 3 4 10 11 12 13 14 20 21 22 23 24 30 31 32>;
            hold-trigger-on-release;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        colemak {
