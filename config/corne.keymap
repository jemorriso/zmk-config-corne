#define ___ &trans

/ {
    combos {
        compatible = "zmk,combos";
        combo_esc {
            timeout-ms = <40>;
            key-positions = <22 23>;
            // bindings = <&mt LG(LALT) ESC>;
            bindings = <&kp ESC>;
        };
        combo_tab {
            timeout-ms = <40>;
            key-positions = <12 13>;
            // bindings = <&kp TAB>;
            bindings = <&mt LG(LALT) TAB>;
        };
        combo_ret {
            timeout-ms = <40>;
            key-positions = <26 27>;
            // bindings = <&mt LG(LALT) RET>;
            bindings = <&kp RET>;
        };
        combo_repeat {
            timeout-ms = <40>;
            key-positions = <16 17>;
            // bindings = <&mt LG(LALT) RET>;
            bindings = <&mt_repeat LG(LALT) 0>;
        };
    };
};

