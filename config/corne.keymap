/ {
    combos {
        compatible = "zmk,combos";
        combo_med {
            timeout-ms = <40>;
            key-positions = <13 14>;
            bindings = <&mo 7>;
        };
        combo_mouse {
            timeout-ms = <40>;
            key-positions = <31 32>;
            bindings = <&mo 6>;
        };
        combo_fun {
            timeout-ms = <40>;
            key-positions = <33 34>;
            bindings = <&mo 5>;
        };
    };
};

/ {
    chosen {
        zmk,physical-layout = &foostan_corne_5col_layout;
    };

    behaviors {
        // lt: layer_tap is default behavior, we make a blt to avoid overriding it ðŸ¥ª
        blt_qt: balanced_layer_tap_quick_tap {
            compatible = "zmk,behavior-hold-tap";
            flavor = "balanced";
            bindings = <&mo>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <200>;
            hold-while-undecided;
        };

        blt_qt_hp: balanced_layer_tap_quick_tap_hold_preferred {
            compatible = "zmk,behavior-hold-tap";
            flavor = "hold-preferred";
            bindings = <&mo>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <200>;
            hold-while-undecided;
        };

        lmt_qt: left_mod_tap_quick_tap {
            compatible = "zmk,behavior-hold-tap";
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <200>;
            hold-trigger-key-positions = <5 6 7 8 9 15 16 17 18 19 25 26 27 28 29 33 34 35>;
            hold-trigger-on-release;
            hold-while-undecided;
        };

        rmt_qt: right_mod_tap_quick_tap {
            compatible = "zmk,behavior-hold-tap";
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <200>;
